<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DBProject.MainWindow"
        Title="Main Interface"
        Width="400" Height="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Go to User Repository" Click="OpenUserRepository_Click" />
        <Button Content="Go to Category Repository" Click="OpenCategoryRepository_Click" />
        <Button Content="Go to Book Repository" Click="OpenBookRepository_Click" />
        <Button Content="Go to Borrow Repository" Click="OpenBorrowRepository_Click" />
    </StackPanel>
</Window>